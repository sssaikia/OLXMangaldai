<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:right="1dp" android:top="1dp">
                <shape>
                    <solid
                        android:color="#adcfc5"/>
                    <corners android:radius="3dp"/>
                </shape>
            </item>
            <item android:right="4dp"
                android:bottom="4dp"
                android:left="4dp"
                android:top="4dp">
                <shape>
                    <solid android:color="#b27179b3"/>
                    <corners android:radius="3dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="false">
        <layer-list>
            <item >
                <shape>
                    <solid
                        android:color="#adcfc5"/>
                    <corners android:radius="3dp"/>
                </shape>
            </item>
            <item android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp">
                <shape>
                    <solid android:color="#b27179b3"/>
                    <corners android:radius="3dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>